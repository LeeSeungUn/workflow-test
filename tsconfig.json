{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ESNext.AsyncIterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@modals/*": ["src/modals/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"],
      "@theme/*": ["src/theme/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@env": ["src/env.ts"],
      "@mockDatas": ["src/test/__mocks__/datas.ts"],
      "@mockWarpper": ["src/test/__mocks__/mockWarpper.tsx"],
      "@jest-test-results.json": ["./test/.jest-test-results.json"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./server/@types"
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
